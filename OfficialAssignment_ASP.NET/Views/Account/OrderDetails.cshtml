@model OfficialAssignment_ASP.NET.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Chi tiết đơn hàng #@Model.Id</h2>
        <a href="/Account/History" class="btn btn-outline-secondary rounded-pill">
            <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
        </a>
    </div>

    <div class="row g-4">
        <!-- Order Info -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Danh sách sản phẩm</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">Sản phẩm</th>
                                <th class="py-3 text-center">Giá</th>
                                <th class="py-3 text-center">Số lượng</th>
                                <th class="py-3 text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/@item.Product.Image" alt="@item.Product.Name" 
                                                 class="rounded-3 me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                            <div>
                                                <h6 class="mb-0 fw-bold">@item.Product.Name</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.Price.ToString("N0")₫</td>
                                    <td class="text-center">x @item.Quantity</td>
                                    <td class="text-end pe-4 fw-bold">@((item.Price * item.Quantity).ToString("N0"))₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end py-3 fw-bold">Tổng cộng:</td>
                                <td class="text-end pe-4 py-3 fw-bold text-primary fs-5">@Model.TotalAmount.ToString("N0")₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Receiver Info -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Thông tin nhận hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small">Người nhận</label>
                        <p class="fw-bold mb-0">@Model.ReceiverName</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Số điện thoại</label>
                        <p class="fw-bold mb-0">@Model.ReceiverPhone</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small">Địa chỉ</label>
                        <p class="fw-bold mb-0">@Model.ReceiverAddress</p>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <label class="text-muted small">Ngày đặt hàng</label>
                        <p class="fw-bold mb-0">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div>
                        <label class="text-muted small">Trạng thái</label>
                        <p class="mb-0">
                            @if (Model.Status == "Đã giao")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else if (Model.Status == "Đã hủy")
                            {
                                <span class="badge bg-danger">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@Model.Status</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
