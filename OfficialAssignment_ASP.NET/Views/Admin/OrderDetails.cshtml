@model OfficialAssignment_ASP.NET.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Chi tiết đơn hàng #@Model.Id</h2>
        <a href="/Admin/Orders" class="btn btn-outline-secondary rounded-pill">
            <i class="fa-solid fa-arrow-left me-2"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Danh sách sản phẩm</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderDetails)
                    {
                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom last-no-border">
                            <img src="~/images/@item.Product.Image" alt="@item.Product.Name" 
                                 style="width: 60px; height: 60px; object-fit: contain;" class="rounded border me-3">
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">@item.Product.Name</h6>
                                <small class="text-muted">Số lượng: @item.Quantity</small>
                            </div>
                            <div class="fw-bold">
                                @item.Price.ToString("N0")₫
                            </div>
                        </div>
                    }
                    <div class="d-flex justify-content-between pt-2">
                        <span class="fs-5 fw-bold">Tổng cộng</span>
                        <span class="fs-5 fw-bold text-primary">@Model.TotalAmount.ToString("N0")₫</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Người nhận:</strong> @Model.ReceiverName</p>
                    <p class="mb-2"><strong>Số điện thoại:</strong> @Model.ReceiverPhone</p>
                    <p class="mb-2"><strong>Địa chỉ:</strong> @Model.ReceiverAddress</p>
                    <p class="mb-2"><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <hr>
                    <p class="mb-2"><strong>Thanh toán:</strong> <span class="badge bg-light text-dark border">@Model.PaymentMethod</span></p>
                    <p class="mb-0"><strong>Trạng thái TT:</strong> 
                        @if (Model.PaymentStatus == "Đã thanh toán")
                        {
                            <span class="badge bg-success text-white">@Model.PaymentStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary text-white">@Model.PaymentStatus</span>
                        }
                    </p>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Trạng thái đơn hàng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="orderId" value="@Model.Id" />
                        <select name="status" class="form-select mb-3">
                            <option value="Chờ xử lý" selected="@(Model.Status == "Chờ xử lý")">Chờ xử lý</option>
                            <option value="Đã xác nhận" selected="@(Model.Status == "Đã xác nhận")">Đã xác nhận</option>
                            <option value="Đang giao" selected="@(Model.Status == "Đang giao")">Đang giao</option>
                            <option value="Đã giao" selected="@(Model.Status == "Đã giao")">Đã giao</option>
                            <option value="Đã hủy" selected="@(Model.Status == "Đã hủy")">Đã hủy</option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill">Cập nhật trạng thái</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .last-no-border:last-child { border-bottom: none !important; margin-bottom: 0 !important; padding-bottom: 0 !important; }
</style>
