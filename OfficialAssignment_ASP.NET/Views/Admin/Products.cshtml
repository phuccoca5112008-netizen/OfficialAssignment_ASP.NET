@model List<OfficialAssignment_ASP.NET.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Quản lý sản phẩm</h2>
        <div>
            <a href="/Admin" class="btn btn-outline-secondary rounded-pill me-2">
                <i class="fa-solid fa-arrow-left me-2"></i> Dashboard
            </a>
            <a href="/Admin/CreateProduct" class="btn btn-primary rounded-pill">
                <i class="fa-solid fa-plus me-2"></i> Thêm sản phẩm
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="py-3 ps-4">Hình ảnh</th>
                    <th class="py-3">Tên sản phẩm</th>
                    <th class="py-3">Danh mục</th>
                    <th class="py-3">Giá</th>
                    <th class="py-3 text-end pe-4">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <img src="~/images/@item.Image" alt="@item.Name" 
                                 style="width: 50px; height: 50px; object-fit: contain;" 
                                 class="rounded border bg-white"
                                 onerror="this.onerror=null;this.src='https://placehold.co/50x50?text=No+Image';">
                        </td>
                        <td class="fw-bold">@item.Name</td>
                        <td><span class="badge bg-secondary">@item.CategoryName</span></td>
                        <td class="text-primary fw-bold">@item.Price.ToString("N0")₫</td>
                        <td class="text-end pe-4">
                            <a href="/Admin/EditProduct/@item.Id" class="btn btn-sm btn-outline-primary rounded-pill me-1">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger rounded-pill" 
                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                                <i class="fa-solid fa-trash"></i>
                            </button>

                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Xác nhận xóa</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-start">
                                            Bạn có chắc chắn muốn xóa sản phẩm <strong>@item.Name</strong> không?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Hủy</button>
                                            <form asp-action="DeleteProduct" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger rounded-pill">Xóa</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
