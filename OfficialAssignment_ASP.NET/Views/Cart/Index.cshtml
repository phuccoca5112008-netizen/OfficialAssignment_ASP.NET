@model List<OfficialAssignment_ASP.NET.Models.CartDetail>
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container mt-5">
    @if (Model.Count == 0)
    {
        <div class="text-center" style="margin-top: 100px; margin-bottom: 100px;">
            <h2 class="fw-bold mb-5">Giỏ hàng của bạn</h2>
            <div class="mb-3">
                <i class="fa-solid fa-cart-arrow-down" style="font-size: 80px; color: #555;"></i>
            </div>
            <p class="mb-4 text-muted">Giỏ hàng đang trống.</p>
            <a href="/" class="btn btn-primary rounded-pill px-5 py-2 fw-bold">Tiếp tục mua sắm</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <table class="table align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 ps-4">Sản phẩm</th>
                                <th class="py-3">Giá</th>
                                <th class="py-3">Số lượng</th>
                                <th class="py-3">Thành tiền</th>
                                <th class="py-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="~/images/@item.Product.Image" alt="@item.Product.Name" 
                                                 style="width: 60px; height: 60px; object-fit: contain;" class="me-3 rounded border">
                                            <div>
                                                <h6 class="mb-0 fw-bold">@item.Product.Name</h6>
                                                <small class="text-muted">@item.Product.Color - @item.Product.Size</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-bold">@item.Product.Price.ToString("N0")₫</td>
                                    <td>
                                        <form asp-action="Update" method="post" class="d-flex align-items-center">
                                            <input type="hidden" name="id" value="@item.ProductId" />
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" 
                                                   class="form-control form-control-sm text-center rounded-3" style="width: 60px;"
                                                   onchange="this.form.submit()">
                                        </form>
                                    </td>
                                    <td class="fw-bold text-primary">
                                        @((item.Quantity * item.Product.Price).ToString("N0"))₫
                                    </td>
                                    <td>
                                        <a href="/Cart/Remove/@item.ProductId" class="text-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4">
                    <h5 class="fw-bold mb-3">Tổng cộng</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <span class="fw-bold">@ViewBag.Total.ToString("N0")₫</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Giảm giá:</span>
                        <span class="text-success">-0₫</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fs-5 fw-bold">Tổng tiền:</span>
                        <span class="fs-5 fw-bold text-primary">@ViewBag.Total.ToString("N0")₫</span>
                    </div>
                    <a href="/Checkout" class="btn btn-primary w-100 py-2 rounded-pill fw-bold mb-2">Thanh toán</a>
                    <a href="/" class="btn btn-outline-secondary w-100 py-2 rounded-pill">Tiếp tục mua hàng</a>
                </div>
            </div>
        </div>
    }
</div>
