@model List<OfficialAssignment_ASP.NET.Models.Product>
@{
    ViewData["Title"] = "Kết quả tìm kiếm";
}

<div class="container mt-5">
    <h3 class="fw-bold mb-4">Kết quả tìm kiếm cho: "<span class="text-primary">@ViewBag.Keyword</span>"</h3>

    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="col-12 text-center py-5">
                <i class="fa-solid fa-magnifying-glass fa-3x text-muted mb-3"></i>
                <p class="lead">Không tìm thấy sản phẩm nào phù hợp.</p>
                <a href="/" class="btn btn-outline-primary rounded-pill px-4">Về trang chủ</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm" style="border-radius: 18px; transition: transform 0.3s;">
                        <div class="position-relative" style="height: 250px; overflow: hidden; padding: 20px;">
                            @if (item.Discount > 0)
                            {
                                <div class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 m-2 rounded-pill fw-bold" style="font-size: 12px; z-index: 10;">
                                    Giảm @item.Discount%
                                </div>
                            }
                            <img src="~/images/@item.Image" 
                                 class="card-img-top" 
                                 alt="@item.Name" 
                                 style="width: 100%; height: 100%; object-fit: contain;"
                                 onerror="this.onerror=null;this.src='https://placehold.co/300x300?text=@item.Name';">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold" style="font-size: 16px;">@item.Name</h5>
                            @if (item.Discount > 0)
                            {
                                <p class="card-text text-danger fw-bold mb-0" style="font-size: 18px;">
                                    @((item.Price * (100 - item.Discount) / 100).ToString("N0")) đ
                                </p>
                                <p class="card-text text-muted text-decoration-line-through small">
                                    @item.Price.ToString("N0") đ
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-primary fw-bold" style="font-size: 18px;">@item.Price.ToString("N0") đ</p>
                            }
                        </div>
                        <div class="card-footer bg-transparent border-0 pb-4 text-center">
                             <a href="/Product/Details/@item.Id" class="btn btn-primary px-4">Mua ngay</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
