@{
    ViewData["Title"] = "Thêm thành viên mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Thêm thành viên mới</h2>
        <a href="/Admin/Users" class="btn btn-outline-secondary rounded-pill">
            <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <form asp-action="CreateUser" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên đăng nhập</label>
                        <input type="text" name="Username" class="form-control" required>
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Username"] != null)
                        {
                            <div class="text-danger small mt-1">@ViewData.ModelState["Username"].Errors[0].ErrorMessage</div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mật khẩu</label>
                        <input type="password" name="Password" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Họ và tên</label>
                        <input type="text" name="FullName" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" name="Email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input type="text" name="Phone" class="form-control">
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Vai trò</label>
                        <select name="Role" class="form-select">
                            <option value="2">Khách hàng</option>
                            <option value="1">Nhân viên</option>
                            <option value="0">Admin (Quản trị viên)</option>
                        </select>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold">
                            <i class="fa-solid fa-user-plus me-2"></i> Tạo tài khoản
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
